﻿@using OnlineShopWebApp.Areas.Admin.Models;
@model List<RoleViewModel>
@{
	int i = 0;
}


@if (Model.Count == 0)
{
	<div style="margin:30px">
		<h1 class="lead">Здесь, пока ни чего нет</h1> <a asp-controller="Role" asp-action="CreateForm" class="btn btn-primary">Добавить роль</a>
		<a asp-controller="Admin" asp-action="Users" class="btn btn-primary">Назад</a>
	</div>
}
else
{
	<div class="text-center">
		<div style="margin:30px">
			<h1 class="lead">Список ролей</h1>
			<div class="row">
				<div class="col">
					<table class="table">
						<thead> </thead>
						<tbody>
							@foreach (var role in Model)
							{
								<tr>
									<td>@role.Name</td>
									<td class="float-right">
										<button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#role_@i">
											Удалить
										</button>
										<div class="modal fade" id="role_@i" tabindex="-1"  aria-labelledby="exampleModalLabel" aria-hidden="true">
											<div class="modal-dialog" >
												<div class="modal-content">
													<div class="modal-header">
														<h5 class="modal-title" id="exampleModalLabel">Удалить роль</h5> <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
															<span aria-hidden="true">&times;</span>
														</button>
													</div>
													<div class="modal-body"> Вы точно хотите удалить роль? </div>
													<div class="modal-footer">
														<a asp-controller="Role" asp-action="Delete" asp-route-name="@role.Name" class="btn btn-outline-primary">Подтвердить</a>
														<a asp-controller="Admin" asp-action="Roles" class="btn btn-outline-primary">Отмена</a>
													</div>
												</div>
											</div>
										</div>
									</td>
								</tr>
								i++;
							}
						</tbody>
					</table>
				</div>
			</div> <a asp-controller="Role" asp-action="CreateForm" class="btn btn-outline-primary">Добавить роль</a>
			<a asp-controller="Admin" asp-action="Users" class="btn btn-outline-primary">Назад</a>
		</div>
	</div>
}