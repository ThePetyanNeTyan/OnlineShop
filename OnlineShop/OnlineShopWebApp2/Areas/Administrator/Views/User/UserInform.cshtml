@model User
<div style="margin:30px">
	<h1 class="lead">Пользователь @Model.Email</h1>
	<div class="row">
		<div class="col">
			<table class="table">
				<thead> </thead>
				<tbody>
					<tr>
						<td>Имя</td>
						<td class="float-right">@Model.UserName </td>
					</tr>
					<tr>
						<td>Email</td>
						<td class="float-right">@Model.Email </td>
					</tr>
					<tr>
						<td>Возраст</td>
						<td class="float-right">@Model.Age </td>
					</tr>
					<tr>
						<td>Номер телефона</td>
						<td class="float-right">@Model.PhoneNumber </td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
	<div class="dropdown">
		<a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
			Действие <span class="caret"></span>
		</a>
		<ul class="dropdown-menu">
			<li><a class="dropdown-item" asp-controller="User" asp-action="EditPasswordForm" asp-route-email="@Model.Email">Смена пароля</a></li>
			<li><a class="dropdown-item" asp-controller="User" asp-action="EditDataForm" asp-route-email="@Model.Email">Редактирование данных</a></li>
			<li><a class="dropdown-item" href="#">Права доступа</a></li>
			<li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#modal1">Удалить пользователя</a></li>
		</ul>
	</div>
	<div class="modal fade" id="modal1" tabindex="-1" aria-labelledby="modal1-label" aria-hidden="true">
		<div class="modal-dialog" >
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-bs-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
					<div class="modal-body">
					<h4 class="lead">Удалить этого пользователя?</h4>
					</div>
					<div class="modal-footer">
						<a asp-controller="User" asp-action="Delete" asp-route-email="@Model.Email" class="btn btn-outline-primary">Подтвердить</a>
						<a asp-controller="User" asp-action="GetUserInform" class="btn btn-outline-primary">Отмена</a> </div>
				</div>
			</div>
		</div>
	</div>
</div>

