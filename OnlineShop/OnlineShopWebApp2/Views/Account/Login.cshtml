@model Login
<div style="margin:30px">
	<div class="text-center">
		<main class="form-row">
			<form method="post" asp-controller="Account" asp-action="Authorization">
				<div class="form-floating">
					<h1 class="lead">Вход</h1>
				</div>
				<div class="form-floating">
					<input asp-for="ReturnUrl" type="hidden" class="form-control" value="@Model.ReturnUrl">
			
				</div>
				<div class="form-floating"> <input asp-for="Email" type="text" class="form-control" id="validationDefault01" placeholder="Email">
					<span asp-validation-for="Email" class="text-danger"></span> </div>
				<div class="form-floating"> <input type="password" asp-for="Password" class="form-control" id="validationDefault02" placeholder="Пароль">
					<span asp-validation-for="Password" class="text-danger"></span> </div>
				<div class="form-group"> <input type="checkbox" asp-for="RememberUser" class="form-check-input" value="true"> 
					<span class="check-label"> Запомнить меня?</span> </div> 
				<button class="btn btn-outline-primary" type="submit">Войти</button>
				<a class="btn btn-outline-primary" asp-controller="Account" asp-action="RegistrationForm"  asp-route-returnUrl="@Model.ReturnUrl">Зарегистрироваться</a>
			</form>
		</main>
	</div>
</div>