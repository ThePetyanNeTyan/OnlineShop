@model ProductViewModel
<div style="margin:30px">
	<div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
		<div class="row gx-6">
			<div class="col">
				<div class="card mb-4 rounded-3 shadow-sm">
					<div class="card-header py-3">
						<h4 class="my-0 fw-normal">@Model.Name</h4> <img src=@Model.ImgPath.Last() class="img-fluid" alt="Responsive image">
						<p>Цена: @Model.Cost рублей</p>
						<p> @Model.Description</p>
						<p>Зачисляемые бонусы:@Model.Bonus</p> <a class="btn btn-outline-primary" asp-controller="Home" asp-action="Index" role="button">Продолжить покупки</a> 
						<a class="btn btn-outline-primary" asp-controller="Cart" asp-action="Add" asp-route-productId="@Model.Id" role="button">Добавить в корзину</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
