<div style="margin:30px">
    <nav class="navbar navbar-light bg-light">
        <a class="p-2" asp-area="" asp-controller="Cart" asp-action="Index" role="button">
            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="black" class="bi bi-cart4" viewBox="0 0 16 16">
                <path d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5zM3.14 5l.5 2H5V5H3.14zM6 5v2h2V5H6zm3 0v2h2V5H9zm3 0v2h1.36l.5-2H12zm1.11 3H12v2h.61l.5-2zM11 8H9v2h2V8zM8 8H6v2h2V8zM5 8H3.89l.5 2H5V8zm0 5a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0zm9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0z" />
            </svg>@await Component.InvokeAsync("Cart")
        </a>
        <a class="p-2" asp-area="" asp-controller="Favorites" asp-action="Favorites" role="button">
            <h5>
                <p class="text-dark">Избранное @await Component.InvokeAsync("Favorites")</p>
            </h5>
        </a>
        <a class="p-2" asp-area="" asp-controller="Comparison" asp-action="Comparison" role="button">
            <h5>
                <p class="text-dark">Сравнение @await Component.InvokeAsync("Comparison")</p>
            </h5>
        </a>
        @if (User.IsInRole(RoleNames.AdminRoleName))
        {
            <a class="p-2" asp-area="Administrator" asp-controller="Admin" asp-action="Users" role="button">
                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="30" fill="black" class="bi bi-person" viewBox="0 0 16 16">
                <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z" />
            </svg>
        </a>} <a class="p-2" asp-area="" asp-controller="Home" asp-action="Index" role="button">
            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="black" class="bi bi-house" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M2 13.5V7h1v6.5a.5.5 0 0 0 .5.5h9a.5.5 0 0 0 .5-.5V7h1v6.5a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 13.5zm11-11V6l-2-2V2.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5z" />
                <path fill-rule="evenodd" d="M7.293 1.5a1 1 0 0 1 1.414 0l6.647 6.646a.5.5 0 0 1-.708.708L8 2.207 1.354 8.854a.5.5 0 1 1-.708-.708L7.293 1.5z" />
            </svg>
        </a>
        <div class="float-right">
            @if (User.Identity.IsAuthenticated || User.IsInRole(RoleNames.AnonymousUserRoleName))
            {
                <a class="p-2" asp-area="" asp-controller="PrivateOffice" asp-action="Index" role="button">
                    <img src="@await Component.InvokeAsync("UserAvatar")" width="20" height="20">
                    </a>
                <a class="p-2" asp-area="" asp-controller="Account" asp-action="LogOut" role="button">
                    <h5>
                        <p class="text-dark">Выйти</p>
                    </h5>
                </a>

            }
            else
            {
            <a class="p-2" asp-area="" asp-controller="Account" asp-action="Login" role="button">
                <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="black" class="bi bi-person-circle" viewBox="0 0 16 16">
                    <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                    <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
                </svg>
            </a>}
        </div>
    </nav>
</div>
